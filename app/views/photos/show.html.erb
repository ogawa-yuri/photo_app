<p>
  <strong>Image:</strong>
  <%= image_tag @photo.image.url if @photo.image.present? %>
</p>
<p>
  <strong>Content:</strong>
  <%= @photo.content %>
</p>

<% unless @photo.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'Delete favorites', favorites_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'Add favorites', favorites_path(photo_id: @photo.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>
<%= link_to 'Back', photos_path %>
